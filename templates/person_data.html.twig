{% extends 'base.html.twig' %}

{% block title %}Person Submitted{% endblock %}

{% block body %}
    <h1>Person Submitted</h1>
    {% if submittedData %}
        <ul>
            <li>Name: {{ submittedData.name }}</li>
            <li>Fecha de nacimiento: {{ submittedData.birthDate }}</li>
            <li>Edad: {{ submittedData.age }}</li>
            <li>Work: {{ submittedData.work }}</li>
            <li>Acepta comunicaciones comerciales: {{ submittedData.aceptaComunicaciones }}</li>
            {% if submittedData.felicidades %}
                <li style="color: green; font-weight: bold;">{{ submittedData.felicidades }}</li>
            {% endif %}
        </ul>
    {% else %}
        <p>No data submitted.</p>
    {% endif %}

    <div style="margin-top: 16px;">
        <a href="{{ path('person') }}">
            <button type="button">Nuevo registro</button>
        </a>
    </div>
{% endblock %}