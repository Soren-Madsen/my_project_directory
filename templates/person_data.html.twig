{% extends 'base.html.twig' %}

{% block title %}Person Submitted{% endblock %}

{% block body %}
    <h1>Person Submitted</h1>
    {% for msg in app.flashes('felicidades') %}
        <div style="color: green; font-weight: bold;">{{ msg }}</div>
    {% endfor %}
    {% if submittedData %}
        <ul>
            <li>Name: {{ submittedData.name }}</li>
            <li>Fecha de nacimiento: {{ submittedData.birthDate }}</li>
            <li>Edad: {{ submittedData.age }}</li>
            <li>Work: {{ submittedData.work }}</li>
            <li>Acepta comunicaciones comerciales: {{ submittedData.acceptsCommercial }}</li>
        </ul>
    {% else %}
        <p>No data submitted.</p>
    {% endif %}
{% endblock %}